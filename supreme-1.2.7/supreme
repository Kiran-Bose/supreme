}

#------------------------------------------------------------------------------------------------
function preferences ()
{
instfmt "Select an option"
echo -e "(1)Configure Quick Access Folders\n(2)Themes"
read prfn
case $prfn in
1)config_qa;;
2)config_theme;;
*)echo -e "\e[91mBad input\e[0m";;
esac
}

